<h1>Payment Calculation</h1>

<form action="/payment/results">
    <div>
        <label id ="apr_input">
            APR
        </label>
        
        <input id="apr_input" type="text" name="the_user_apr" placeholder="E.g. 5.42" />     
    </div>
    
    <div>
        <label id ="years_input">
            Number of years
        </label>
        
        <input id="years_input" type="text" name="the_user_years" placeholder="How many years to repay" />     
    </div>
    
    <div>
        <label id ="principal_input">
            Principal
        </label>
        
        <input id="principal_input" type="text" name="the_user_principal" placeholder="How much principal" />     
    </div>
    
    <button>
        Calculate monthly payment
    </button>
</form>    

